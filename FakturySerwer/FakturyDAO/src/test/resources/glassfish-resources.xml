<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE resources PUBLIC "-//Sun Microsystems, Inc.//DTD Application Server 9.0 Resource Definitions //EN"  
        "http://www.sun.com/software/appserver/dtds/sun-resources_1_4.dtd">  
<resources>  
    <jdbc-resource pool-name="assenFaktury"  
                   jndi-name="jdbc/assenFakturyDB"/>  
    <jdbc-connection-pool name="assenFaktury"  
                          res-type="javax.sql.DataSource"  
                          datasource-classname="org.postgresql.ds.PGSimpleDataSource">
        <property name="ServerName" value="localhost"/>  
        <property name="PortNumber" value="5432"/>  
        <property name="DatabaseName" value="FakturyDB"/>  
        <property name="User" value="faktury"/>  
        <property name="Password" value="faktury_admin"/>  
    </jdbc-connection-pool>  
         
</resources>  